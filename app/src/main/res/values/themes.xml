<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- 기타 속성들 -->
        <!-- Add these -->
        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>
    </style>
    <style name="MaterialCustomRoot" parent="Theme.MaterialComponents.Light">


    </style>
    <style name="ThemeOverlay.MaterialComponents.Calendar" parent="ThemeOverlay.MaterialComponents.Light">
        <!-- 달력의 배경 색상을 지정 -->
        <item name="colorSurface">@color/purple_200</item>

        <!-- 선택된 날짜의 색상을 지정 -->
        <item name="colorOnPrimary">@color/teal_200</item>

        <!-- 다른 월에 속한 날짜의 색상을 지정 -->
        <item name="colorOnSurface">@color/dataAvailableColor</item>
        <!-- 다른 속성들을 필요에 따라 추가할 수 있습니다. -->
        <!-- materialCalendarTheme 추가 -->

    </style>

</resources>